{
  "name": "claude-app-server",
  "version": "1.0.2",
  "description": "Claude Code App Server â€” A JSON-RPC 2.0 server wrapping Claude Code capabilities. Equivalent to the OpenAI Codex App Server.",
  "license": "MIT",
  "type": "commonjs",
  "main": "dist/index.js",
  "bin": {
    "claude-app-server": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sumansid/claude-app-server.git"
  },
  "keywords": [
    "claude",
    "claude-code",
    "app-server",
    "json-rpc",
    "websocket",
    "ai",
    "cli"
  ],
  "author": "Suman Sigdel",
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "start": "node dist/index.js start",
    "start:no-tls": "node dist/index.js start --no-tls",
    "start:ws": "node dist/index.js --transport ws --port 3284",
    "dev": "pnpm exec ts-node src/index.ts",
    "dev:ws": "pnpm exec ts-node src/index.ts --transport ws --port 3284",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "qrcode-terminal": "^0.12.0",
    "selfsigned": "^2.4.1",
    "uuid": "^11.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}